# ============================================================
# EduConnect Algeria — Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# ============================================================

# ========================
# Django Backend
# ========================
DJANGO_SECRET_KEY=change-me-to-a-random-50-char-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DJANGO_SETTINGS_MODULE=educonnect.settings.production

# ========================
# Database (PostgreSQL)
# ========================
# For Docker: DB_HOST=db (service name in docker-compose)
# For local:  DB_HOST=localhost
DB_NAME=educonnect_db
DB_USER=educonnect_user
DB_PASSWORD=change-me-strong-password
DB_HOST=db
DB_PORT=5432

# External port mapping (host → container)
DB_PORT_EXTERNAL=5433

# ========================
# Redis
# ========================
# For Docker: REDIS_URL=redis://redis:6379/0
# For local:  REDIS_URL=redis://localhost:6380/0
REDIS_URL=redis://redis:6379/0

# External port mapping (host → container)
REDIS_PORT_EXTERNAL=6380

# ========================
# Celery
# ========================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ========================
# JWT Settings
# ========================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ========================
# Firebase (Push Notifications — V1 API)
# ========================
# Place firebase-service-account.json in backend/
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ========================
# File Storage (S3 / Cloudflare R2)
# ========================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=educonnect-files
AWS_S3_REGION_NAME=auto
AWS_S3_ENDPOINT_URL=https://your-r2-endpoint.r2.cloudflarestorage.com

# ========================
# OpenAI (AI Chatbot)
# ========================
OPENAI_API_KEY=sk-your-openai-api-key

# ========================
# Pinecone (Vector DB for RAG)
# ========================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=educonnect-knowledge

# ========================
# Sentry (Error Monitoring)
# ========================
SENTRY_DSN=https://your-sentry-dsn-here

# ========================
# Optional: Auto-create superuser on first run
# ========================
# DJANGO_SUPERUSER_EMAIL=admin@educonnect.dz
# DJANGO_SUPERUSER_PASSWORD=change-me

# ========================
# Flutter Mobile App
# ========================
API_BASE_URL=http://localhost:8001/api/v1
