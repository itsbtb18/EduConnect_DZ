# EduConnect Algeria — Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ========================
# Django Backend
# ========================
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=educonnect.settings.development

# Database (PostgreSQL)
DB_NAME=educonnect_db
DB_USER=educonnect_user
DB_PASSWORD=change-me-to-a-strong-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Firebase Cloud Messaging (Server Key — NEVER put in client code)
FCM_SERVER_KEY=your-fcm-server-key-here

# File Storage (S3 / Cloudflare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=educonnect-files
AWS_S3_REGION_NAME=auto
AWS_S3_ENDPOINT_URL=https://your-r2-endpoint.r2.cloudflarestorage.com

# OpenAI (for AI Chatbot)
OPENAI_API_KEY=sk-your-openai-api-key

# Pinecone (Vector DB for RAG)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=educonnect-knowledge

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn-here

# ========================
# Flutter Mobile App
# ========================
API_BASE_URL=http://localhost:8000/api/v1

# ========================
# Admin Panel (React)
# ========================
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
